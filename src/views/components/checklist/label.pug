.c-checklist__column.c-checklist__label
  label(for=`c-checklist__item-${sectionTitle.toLowerCase().split(' ').join('-')}-${i}`)

    p.label__title= item.title
    p.label__description #{item.context}

    if item.children
      .c-checklist__documentation
        ul.documentation__list
          each child, i in item.children
            li
              if child.title
                p.c-checklist__text= child.title

    .c-checklist__details.js-details

      if item.code
        .c-checklist__code
          .c-checklist__code__loader.js-loader
            .code-icons
          .c-checklist__code__github.js-code(data-code-url=`${item.code}`)

    .c-tags
      ul.c-tags__list
        li.c-tags__item= item.id

      ul.c-tags__list
        li.c-tags__item= item.category
        li.c-tags__item= item.subCategory 

      ul.c-tags__list
        each tag in item.tags
          if tag == 'all'
          else
            li.c-tags__item= tag.toUpperCase()

  